doctype 5
html
	head
		title Remote
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js')
		script(src="/socket.io/socket.io.js")
		script(src="remote.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.3.1/jquery.cookie.min.js")
		link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(name='apple-mobile-web-app-capable', content='yes')
		link(rel='apple-touch-icon-precomposed', href='favicon.ico')
		style
			*:not(input){
			-webkit-user-select:none;
			}
			body{
			background-color:#2F4F4F;
			}
			.container{
			margin:5%;
			border:2px solid #000;
			border-radius:25px;
			padding:10%;
			background-color:#D3D3D3
			}
			#controls{
			margin-top:20%;
			margin-bottom:5%;
			text-align:center;
			}
			.btn{
			width:30%;
			}
			#down, #playpause{
			width:40%
			}
			.glyphicon{
			font-size:2em;
			line-height:1.8;
			}
	body
		div.container
			input(type='text')#id.form-control
			div#controls
				button#prev.btn.btn-info
					span.glyphicon.glyphicon-backward
				button#playpause.btn.btn-primary
					span.glyphicon.glyphicon-play
					span.glyphicon.glyphicon-pause
				button#next.btn.btn-info
					span.glyphicon.glyphicon-forward
				br
				button#mute.btn.btn-primary
					span.glyphicon.glyphicon-volume-off
				button#down.btn.btn-info
					span.glyphicon.glyphicon-volume-down
				button#up.btn.btn-primary
					span.glyphicon.glyphicon-volume-up
